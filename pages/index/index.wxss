.inputInfo {
  font-style: italic;
  display: flex;
  justify-content: flex-start;
  background: #f8f8f8;
  color: #f5f6f7;
}

.contentList .inputInfo input {
  width: 90%;
  height: 4rem;
  line-height: 4rem;
  font-size: 1.2rem;
  padding: 0 1rem;
  color: #888;
}

.dataList {
  padding: 0 0.8rem;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  background-color: #fff;
  padding-left: 0;
}

.dataList label {
  display: block;
  font-size: 1rem;
}

.inner {
  position: absolute;
  top: 0;
}

.inner.txt {
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding: 1rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.inner.del {
  background-color: #e64340;
  width: 90px;
  height: 2.2rem;
  text-align: center;
  z-index: 0;
  color: #fff;
  line-height: 2.2rem;
  font-size: 1rem;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.listOver {
